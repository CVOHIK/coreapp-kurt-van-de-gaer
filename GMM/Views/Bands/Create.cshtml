@model GMM.Data.Band

@{
    ViewData["Title"] = "Aanmaken van band";
}

<h1>Aanmaken van band</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Omschrijving" class="control-label"></label>
                <input asp-for="Omschrijving" class="form-control" />
                <span asp-validation-for="Omschrijving" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KleurCodeId" class="control-label"></label>
                <select asp-for="KleurCodeId" class ="form-control" asp-items="ViewBag.KleurCodeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br/>
<div>
    <a asp-action="Index"><img src="~/pics/return.png" /></a>
</div>

